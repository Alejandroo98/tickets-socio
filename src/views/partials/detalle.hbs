<div class="container">
    <table class="table">
        <caption>Seleciona un registro para ver sus detalles</caption>
        <br>
        <br>

        <div>
            <button class="boton"><span>HOY</span></button>
        </div>

        <thead>
            <tr>
                <th>FECHA</th>
                <th>HORA SALIDA</th>
                <th>HORA LLEGADA</th>
                <th>RUTA</th>
                <th>ASIENTOS</th>
                <th>ENCOMIENDAS</th>
            </tr>
        </thead>

        <tbody>
            {{#each datos}}
            <tr>
                <td data-label="FECHA">
                    {{ fecha }}
                </td>
                <td data-label="HORA SALIDA">
                    {{ hora_salida }}
                </td>
                <td data-label="HORA LLEGADA">
                    {{ hora_llegada }}
                </td>
                <td data-label="RUTA">
                    {{ ruta }}
                </td>
                <td data-label="ASIENTOS">
                    {{ asientos }}
                </td>
                <td data-label="ENCOMIENDAS">
                    {{ encomiendas }}
                </td>
            </tr>
            {{/each}}
        </tbody>

    </table>
</div>